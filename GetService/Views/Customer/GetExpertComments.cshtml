@using App.Domain.Core.CommentEntity.DTOs
@model List<ExpertCommentDto>
@{
    Layout = "_CustomerProfileLayout";
}

<div class=" container col-lg-8">


    <table class="table table-striped table-hover table-responsive">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">عنوان نظر</th>
                <th scope="col">نام کاربر</th>
                <th scope="col">امتیاز</th>
                <th scope="col">توضیحات</th>
                <th scope="col">تاریخ ثبت نظر</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                <tr>
                    <th scope="row">@comment.Id</th>
                    <td>@comment.Title</td>
                    <td>@comment.CustomerFullName</td>
                    <td>@comment.Score</td>
                    <td>@comment.Description</td>
                    <td>@comment.CreatedAtFa</td>
                </tr>
            }

        </tbody>
    </table>
</div>