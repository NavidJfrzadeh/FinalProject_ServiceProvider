@page
@model GetService.Areas.Identity.Pages.Account.RegisterModel
@{
}

<section class="gray">
    <div class="container">
        <div class="row align-items-start justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-12">

                <div class="signup-screen-wrap">
                    <div class="signup-screen-single light">
                        <div class="text-center mb-4">
                            <h4 class="m-0 ft-medium">ثبت نـام</h4>
                        </div>

                        <form method="post" class="submit-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.RegisterView.FullName" class="mb-1"></label>
                                        <input asp-for="@Model.RegisterView.FullName" type="text" class="form-control rounded" placeholder="مسعود هاشمی*">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.RegisterView.Email" class="mb-1">پست الکترونیک</label>
                                        <input asp-for="@Model.RegisterView.Email" type="email" class="form-control rounded" placeholder="example@gmail.com">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="@Model.RegisterView.Password" class="mb-1">رمز عبور</label>
                                <input asp-for="@Model.RegisterView.Password" type="password" class="form-control rounded" placeholder="رمز عبور*">
                            </div>

                            <div class="flex-1 my-2">
                                <input asp-for="@Model.RegisterView.IsExpert" class="checkbox-custom" type="checkbox">
                                <label asp-for="@Model.RegisterView.IsExpert" class="checkbox-custom-label">کارشناس هستید؟</label>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-md full-width bg-sky text-light rounded ft-medium">ثبت نام</button>
                            </div>

                            <div class="form-group text-center mb-0">
                                <p class="extra">یا</p>
                                <div class="option-log">
                                    <div class="single-log-opt"><a href="javascript:void(0);" class="log-btn"><img src="assets/img/c-1.png" class="img-fluid" alt="" />ورود با Google</a></div>
                                    <div class="single-log-opt"><a href="javascript:void(0);" class="log-btn"><img src="assets/img/facebook.png" class="img-fluid" alt="" />ورود با Facebook</a></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>