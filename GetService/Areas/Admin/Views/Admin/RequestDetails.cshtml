@using App.Domain.Core.RequestEntity
@using App.Domain.Core._0_BaseEntities.Enums
@model Request
@{
    ViewData["Title"] = " توضیحات درخواست";
    Layout = "_AdminLayout";
}

<div class="col-sm-12 col-md-6 col-xl-6">
    <div class="card">
        <div class="card-header bg-primary d-flex justify-content-between align-items-center">
            <h2 class="text-white">@Model.Id</h2>
        </div>
        <div class="card-body">
            <p class="mb-0">
                مشتبمشنتشا شمهشبم مشهقش شبمنتبش
            </p>
        </div>
        <div class="card-footer">
            <form method="post" asp-action="">
                <select asp-for="@Model.Status" asp-items="Html.GetEnumSelectList<Status>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <input id="id" name="id" type="hidden" value="@Model.Id" />
                <input class="btn btn-warning" type="submit" asp-action="RequestSetStatus" value="تغییر وضعیت" />
            </form>
            <a asp-action="" class="btn btn-outline-success" asp-route-id="@Model.Id">تایید</a>
            <a asp-action="" class="btn btn-outline-danger" asp-route-id="@Model.Id">حذف</a>
        </div>
    </div>
</div>

