@using App.Domain.Core.CategoryEntity.DTOs
@using App.Domain.Core.ServiceEntity.DTOs
@model ServiceCreateDto
@{
    ViewData["Title"] = "ساخت خدمت جدید";
    Layout = "_AdminLayout";
    var CategoriesTitle = ViewData["CategoriesTitle"] as List<CategoryDto>;
}

<div class="portlet-body edit-form">
    <div class="row">
        <div class="col-lg-6 col-md-10 m-auto m-b-30">
            <div class="text-center">
                <div class="user-box">
                    <a href="" target="_blank">
                        <img src="" alt="عکس سرویس" class="img img-responsive">
                    </a>
                </div>
            </div>
            <div class="form-group relative mt-3 mb-4">
                <input asp-for="@Model.ImageSrc" type="file" class="form-control">
                <div class="input-group round">
                    <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                    <span class="input-group-btn input-group-sm">
                        <button type="button" class="btn btn-success">
                            <i class="icon-picture"></i>
                            آپلود عکس
                        </button>
                    </span>
                </div>
                <div class="help-block"></div>
            </div>
            <hr>
            <form asp-action="ServiceCreate" role="form" method="POST">
                <div class="form-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="@Model.Title" class="form-label"></label>
                                <div class="input-group round">
                                    <input type="text" asp-for="@Model.Title" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="@Model.CategoryId">دسته بندی ها</label>
                                <select asp-for="@Model.CategoryId" class="form-select">
                                    <option value="@null">انتخاب کنید</option>
                                    @foreach (var item in CategoriesTitle)
                                    {
                                        <option value="@item.CategoyId">@item.Title</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.BasePrice" class="form-label"></label>
                        <div class="input-group round">
                            <span class="input-group-addon">
                                <i class="fas fa-money-bill-1"></i>
                            </span>
                            <input type="number" asp-for="@Model.BasePrice" class="form-control ltr text-left">
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Description" class="form-label"></label>
                        <div class="input-group round">
                            <textarea asp-for="@Model.Description" class="form-control" rows="4" placeholder="توضیحات"></textarea>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-success btn-round">
                        <i class="icon-check"></i>
                        ذخیره
                    </button>
                    <a href="#" class="btn btn-warning btn-round float-end">
                        <i class="icon-close"></i>
                        بازگشت
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>